<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="flex justify-center">
      <%= render "devise/shared/airbnbsvg" %>
    </div>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <% if alert %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800"><%= alert %></h3>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-airbnb-primary sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-airbnb-primary sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-airbnb-primary focus:ring-airbnb-primary" %>
              <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-gray-900" %>
            <% end %>
          </div>

          <div class="text-sm leading-6">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-semibold text-airbnb-primary hover:text-airbnb-dark" %>
            <% end %>
          </div>
        </div>

        <div>
           <%= f.submit "Log in", class: "flex w-full justify-center rounded-md bg-airbnb-primary px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-airbnb-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-airbnb-primary cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <p class="mt-10 text-center text-sm text-gray-500">
      Not a member?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold leading-6 text-airbnb-primary hover:text-airbnb-dark" %>
    </p>
  </div>
</div>
